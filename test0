//输入俩个数 求和
int main()
{
	int a = 0;
	int b = 0;
	int sum = 0;
	printf("请输入俩个数字\n");
	scanf("%d %d", &a, &b);
	sum = a + b;
	printf("俩数之和是%d\n", sum);

	return 0;
